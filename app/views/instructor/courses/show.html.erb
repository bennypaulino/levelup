<br>
<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1 class="text-center"><%= @course.title %></h1>
  <br>

  <div class="col-sm-4 col-xs-12 text-center">
    <span class="label label-default">
      <%= number_to_currency @course.cost %>
    </span>
  </div>
  <div class="col-sm-4 col-xs-12">
    <%= @course.description %>
  </div>

</div>

<div class="col-xs-10 col-xs-offset-1">
  <div class="pull-right">
    <% if current_user && current_user == @course.user %>
      <%= link_to 'Edit', edit_instructor_course_path(@course), class: 'btn btn-warning' %>&nbsp&nbsp&nbsp
      <%= link_to 'Delete', instructor_course_path(@course.id), method: :delete, data: {confirm: 'Are you sure you want to delete this?'}, class: 'btn btn-danger' %>
    <% end %>
    
  </div>
</div>