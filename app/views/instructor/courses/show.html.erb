<br>
<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1 class="text-center"><%= current_course.title %></h1>
  <script type="text/javascript">
    $(function(){
      $('.lessons').sortable({
        update: function( event, ui ) {
          $.ajax({
            type: 'PUT',
            url: ui.item.data('update-url'),
            dataType: 'json',
            data: { lesson: { row_order_position: ui.item.index() } }
          });
        }
      });
    });
  </script>

  <script type="text/javascript">
    $(function(){
      $('.sections').sortable({
        update: function( event, ui ) {
          $.ajax({
            type: 'PUT',
            url: ui.item.data('update-url'),
            dataType: 'json',
            data: { section: { row_order_position: ui.item.index() } },
          });
        }
      });
    });
  </script>
  <br>

  <%= image_tag current_course.image, class: 'img-responsive center-block' %>

  <br>
  <%= link_to 'Preview as a Student...', course_path(current_course), class: 'btn btn-warning pull-right' %>
  <br class="clr">

  <div class="col-xs-8 col-xs-offset-2">
    <%= current_course.description %>
    <br>
    <br>

    <div id="notice"> </div>
    <ul class="sections">
      <% current_course.sections.rank(:row_order).each do |section| %>
        <li data-update-url=<%= instructor_section_path(section) %>>
          <%= section.title %>
          <%= link_to 'New Lesson', new_instructor_section_lesson_path(section), class: 'pull-right btn btn-primary btn-xs'  %>
          <ul class="lessons">
            <% section.lessons.rank(:row_order).each do |lesson| %>
              <li data-update-url=<%= instructor_lesson_path(lesson) %>>
                <b><%= lesson.title %></b>
                -
                <%= lesson.subtitle %>
              </li>
            <% end %>
          </ul>
          
        </li>
      <% end %>
    </ul>
  </div>
  <br class="clr">
  <br>

  <div class="text-center">
    <%= link_to 'Add a new section...', new_instructor_course_section_path(current_course), class: 'btn btn-primary btn-lg' %>
  </div>

  <br>

  <br class='clr'>
  <br>

  <div class="pull-right">
    <% if current_user && current_user == current_course.user %>
      <%= link_to 'Edit Course', edit_instructor_course_path(current_course), class: 'btn btn-warning' %>&nbsp&nbsp&nbsp
      <%= link_to 'Delete Course', instructor_course_path(current_course.id), method: :delete, data: {confirm: 'Are you sure you want to delete this?'}, class: 'btn btn-danger' %>
    <% end %>
    
  </div>

</div>