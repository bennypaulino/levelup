<br>
<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1 class="text-center"><%= @course.title %></h1>
  <br>
  <%= link_to 'Preview as a Student...', course_path(@course), class: 'btn btn-warning pull-right' %>
  <br class="clr">

  <div class="col-xs-8 col-xs-offset-2">
    <%= @course.description %>
    <br>
    <br>
    
    <ul>
      <% @course.sections.each do |section| %>
        <li>
          <%= section.title %>
          <%= link_to 'New Lesson', new_instructor_section_lesson_path(section), class: 'pull-right btn btn-primary btn-xs'  %>
          <ul>
            <% section.lessons.each do |lesson| %>
              <li>
                <b><%= lesson.title %></b>
                -
                <%= lesson.subtitle %>
              </li>
            <% end %>
          </ul>
          <br class="clr">
        </li>
      <% end %>
    </ul>
  </div>

  <br>

  <div class="text-center">
    <%= link_to 'Add a new section...', new_instructor_course_section_path(@course), class: 'btn btn-primary btn-lg' %>
  </div>

  <br>

  <br class='clr'>
  <br>

  <div class="pull-right">
    <% if current_user && current_user == @course.user %>
      <%= link_to 'Edit Course', edit_instructor_course_path(@course), class: 'btn btn-warning' %>&nbsp&nbsp&nbsp
      <%= link_to 'Delete Course', instructor_course_path(@course.id), method: :delete, data: {confirm: 'Are you sure you want to delete this?'}, class: 'btn btn-danger' %>
    <% end %>
    
  </div>

</div>