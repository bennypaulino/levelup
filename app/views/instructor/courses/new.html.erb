<br>
<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1>Add a new course</h1>
  <br>
  <%= simple_form_for @course, url: instructor_courses_path do |f| %>
    <%= f.input :title, required: true, autofocus: true %>
    <br>
    <%= f.input :image, as: :image_preview, input_html: {preview_version: :thumb} %>
    <br>
    <%= f.input :description, required: true %>
    <br>
    <%= f.input :cost %>
    <br>
    <br>
    <%= f.submit "Create", class: 'btn btn-success col-xs-3' %>
    <br>
  <% end %>
  <br>
</div>