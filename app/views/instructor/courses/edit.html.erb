<br>
<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1 class="text-center">Edit <%= @course.title %></h1>
  <br>
  <%= simple_form_for @course, url: instructor_course_path(@course.id) do |f| %>
    <%= f.input :title, required: true, autofocus: true %>
    <br>
    <%= f.input :description, required: true %>
    <br>
    <%= f.input :image %>
    <br>
    <%= f.input :cost %>
    <br>
    <%= f.submit "Update", class: 'btn btn-success col-xs-3' %>
    <br>
  <% end %>
  <br>
</div>