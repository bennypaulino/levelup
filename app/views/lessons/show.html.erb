<br>

<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1><%= current_lesson.title %></h1>

  <div data-no-turbolink>
    <% if current_lesson.video.to_s.present? %>
      <video id="my-video" class="video-js vjs-default-skin vjs-big-play-centered vjs-fluid" controls preload="auto" width="auto" height="auto"
      poster="/assets/black.jpg" data-setup="{}">
        <source src="<%= current_lesson.video.to_s %>" type='video/mp4'>
        <p class="vjs-no-js">
          To view this video please enable JavaScript, and consider upgrading to a web browser that
          <a href="http://videojs.com/html5-video-support/" target="_blank">supports HTML5 video</a>
        </p>
      </video>
    <% end %>
  </div>

  <br class='clr'>

  <p class="pull-left">
    <%= current_lesson.subtitle %>
  </p>

  <div class="pull-right">
    <% if current_lesson.previous_lesson.present? %>
      <%= link_to lesson_path(current_lesson.previous_lesson), class: 'btn btn-default' do %>
        <span class="glyphicon glyphicon-chevron-left"></span>        
      <% end %>
      &nbsp;
    <% end %>
    <% if current_lesson.next_lesson.present? %>
      <%= link_to lesson_path(current_lesson.next_lesson), class: 'btn btn-success' do %>
        Next Lesson &nbsp;
        <span class="glyphicon glyphicon-chevron-right"></span>
      <% end %>
    <% end %>
  </div>    
</div>